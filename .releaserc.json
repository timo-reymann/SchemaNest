{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@google/semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": [
              "openapi.yml"
            ],
            "from": "version: = \"v[0-9.]+\"",
            "to": "version: \"${nextRelease.version}\"",
            "results": [
              {
                "file": "pyproject.toml",
                "hasChanged": true
              }
            ]
          },
          {
            "files": [
              "README.md"
            ],
            "from": "timoreymann/schema-nest-cli:v[0-9.]+",
            "to": "timoreymann/schema-nest-cli:${nextRelease.version}",
            "results": {
              "file": "README.md",
              "hasChanged": true
            }
          },
          {
            "files": [
              "README.md"
            ],
            "from": "timoreymann/schema-nest-registry:v[0-9.]+",
            "to": "timoreymann/schema-nest-registry:${nextRelease.version}",
            "results": {
              "file": "README.md",
              "hasChanged": true
            }
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github"
    ]
  ],
  "tagFormat": "v${version}"
}
