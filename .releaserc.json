{
  "branches": [
    "main"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "semantic-release-replace-plugin",
      {
        "replacements": [
          {
            "files": [
              "openapi.yml"
            ],
            "from": "version: \"v[0-9.]+\"",
            "to": "version: \"${nextRelease.version}\"",
            "results": [
              {
                "file": "openapi.yml",
                "hasChanged": true
              }
            ]
          },
          {
            "files": [
              "README.md"
            ],
            "from": "timoreymann/schema-nest-registry:v[0-9.]+",
            "to": "timoreymann/schema-nest-registry:${nextRelease.version}",
            "results": {
              "file": "README.md",
              "hasChanged": true
            }
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "README.md",
          "openapi.yml"
        ]
      }
    ],
    [
      "@semantic-release/github"
    ]
  ],
  "tagFormat": "v${version}"
}
